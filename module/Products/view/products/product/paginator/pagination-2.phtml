
<?php if ($this->pageCount): ?>
<ul class="pagination">
    <?php if (isset($this->previous)): ?>
    <li class="page-item">
      <a class="page-link" href="<?= $this->url($this->route, [
                                'page' => $this->previous,
                                'action'=>'index',
                                'controller'=>'product'
                            ]); ?>" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <?else:?>
      <li class="page-item disabled">
      <span aria-hidden="true">&laquo;</span>
    </li>
    <?endif?>
    <?php if (isset($this->first)): ?>
    <li class="page-item">
      <a class="page-link" href="<?= $this->url($this->route, [
                                'page' => $this->first,
                                'action'=>'index',
                                'controller'=>'product'
                            ]); ?>" aria-label="Previous">
        <span aria-hidden="true">First</span>
      </a>
    </li>
    <? endif?>
    <?php foreach ($this->pagesInRange as $page): ?>
    <?php if ($page != $this->current): ?>
    <li class="page-item">
      <a class="page-link" href="<?= $this->url($this->route, [
                                    'page' => $page,
                                    'action'=>'index',
                                    'controller'=>'product'
                                ]); ?>"> <?= $page; ?></a>
    </li>
    <? else: ?>
    <li class="page-item active"><a class="page-link" href="#"><?= $page; ?></a></li>
    <? endif?>
    <?endforeach?>

    <?php if (isset($this->last)): ?>
    <li class="page-item">
      <a class="page-link" href="<?= $this->url($this->route, [
                                'page' => $this->last,
                                'action'=>'index',
                                'controller'=>'product'
                            ]); ?>" aria-label="Next">
        <span aria-hidden="true">Last</span>
      </a>
    </li>
    <? endif?>

    <?php if (isset($this->next)): ?>
    <li class="page-item">
      <a class="page-link" href="<?= $this->url($this->route, [
                                'page' => $this->next,
                                'action'=>'index',
                                'controller'=>'product'
                            ]); ?>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>

    <? else:?>
      <li class="page-item disabled">
        <span aria-hidden="true">&raquo;</span>
      </li>
    <? endif?>
    
</ul>

<?php endif?>
